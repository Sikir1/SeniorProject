doctype html
html
  head
    title= title
    meta(charset="UTF-8" http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    style
      include ../node_modules/bootstrap/dist/css/bootstrap.css
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    link(rel="stylesheet" href="css/request.css")
  body
    main
      div.d-flex.flex-row
        div#navigation
          nav.bg-dark.d-flex.flex-column
            p#transportationTab.text-white.m-0.d-flex.flex-row.justify-content-between.p-3
              span &#9868; TRANSPORTATION
              span &#10096;
            div#transportationContainer.d-flex.flex-column.overflow-hidden
              a(href="#").text-white.p-3 Dashboard
              a(href="#").text-white.pb-3.px-3 Request A Ride
              a(href="#").text-white.pb-3.px-3 Scheduled Appointments
              a(href="#").text-white.pb-3.px-3 Active Rides
              a(href="#").text-white.pb-3.px-3 Logs
            p#userManagementTab.text-white.m-0.d-flex.flex-row.justify-content-between.p-3 
              span &#9998; USER MANAGEMENT
              span &#10096;
            div#userManagementContainer.d-flex.flex-column.overflow-hidden
              a(href="#").text-white.p-3 User Settings
              a(href="#").text-white.pb-3.px-3 Log Out
        div.flex-grow-1.bg-light
          div#titleContainer.card.p-3
            h2.text-center Schedule An Appointment
          div.container-fluid
            div.bg-light.row.g-2.p-5
              form#patientInformation.card.p-3.mr-3.col(action='/test' method='POST')
                h3.text-center Patient Information
                div.d-flex.flex-column.my-2
                  label(for="org").form-label Organization
                  input(type="text" name="org" required="true")#org.form-control
                div.d-flex.flex-column.my-2
                  label(for="tel").form-label Phone Number
                  input(type="text" name="tel" required="true")#tel.form-control
                div.d-flex.flex-column.my-2
                  label(for="fname").form-label First Name
                  input(type="text" name="fname" required="true")#fname.form-control
                div.d-flex.flex-column.my-2
                  label(for="lname").form-label Last Name
                  input(type="text" name="lname" required="true")#lname.form-control
                div.d-flex.flex-column.my-2
                  label(for="fileNumber").form-label File Number
                  input(type="text" name="filenum" required="true")#fileNumber.form-control
                h3.text-center.mt-2 Appointment Information
                div#tripDirContainer.my-2
                  div.form-check
                    input(type="radio" name="tripDirection")#oneWay.form-check-input
                    label(for="oneWay").form-check-label One Way
                  div.form-check
                    input(type="radio" name="tripDirection")#roundTrip.form-check-input
                    label(for="roundTrip").form-check-label Round Trip
                  div.form-check
                    input(type="radio" name="tripDirection")#multiLeg.form-check-input
                    label(for="multiLeg").form-check-label Multi Leg
                div.d-flex.flex-column.my-2
                  label(for="appType").form-label Appointment Type
                  input(type="text" name="apptype" required="true")#appType.form-control
                div.d-flex.flex-column.my-2
                  label(for="arrAddr").form-label Arrival Address
                  input(type="text" name="arraddr" required="true")#arrAddr.form-control
                div.d-flex.flex-column.my-2
                  label(for="destAddr").form-label Destination Addres
                  input(type="text" name="destaddr" required="true")#destAddr.form-control
                div.d-flex.flex-column.my-2
                  label(for="notesToDriver").form-label Notes To Driver 
                  textarea(name="notesToDriver" rows="5")#notesToDriver.form-control
                div.mt-2.d-flex.justify-content-center.p-1.h-100
                  button(type="submit")#estimates.btn.btn-success Get Estimates
              div(style='background-image: url(/public/images/GoogleMap.webp)')#map.card.col.ml-3
          div#providers.mb-5.mx-5          
    script(src="js/request.js" defer="true")
